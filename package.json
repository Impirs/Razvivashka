{
  "name": "play_and_learn",
  "version": "1.2.5",
  "description": "An educational application with games for kids",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.impirs.razvivashka",
    "productName": "Развивашка",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "play_and_learn-Setup-${version}.${ext}",
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ],
        "certificateFile": "D:/Test_1/certificate.pfx",
        "certificatePassword": "jdi5l92lplx0seq390"
      }
    },
    "files": [
      "app.js",
      "preload.js",
      "renderer.js",
      "data_manager.js",
      "index.html",
      "style_base.css",
      "pages/**/*",
      "assets/**/*",
      "games/**/*",
      "!**/local_data/**",
      "!**/*.log",
      "!**/test/**",
      "!**/*.bak"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Impirs",
        "repo": "Razvivashka"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Impirs/Razvivashka.git"
  },
  "keywords": [
    "games",
    "for kids",
    "learning"
  ],
  "author": "Artem Mamitov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Impirs/Razvivashka/issues"
  },
  "homepage": "https://github.com/Impirs/Razvivashka#readme",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "electron-log": "^5.3.2",
    "electron-updater": "^6.3.9"
  }
}

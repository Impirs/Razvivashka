{
  "name": "play_and_learn",
  "version": "2.2.0",
  "description": "An educational application with games for kids",
  "main": "./electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run start\"",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:all": "npm run build:react && electron-builder -mwl",
    "start": "electron .",
    "test": "jest --config ./jest.config.js --passWithNoTests --silent"
  },
  "build": {
    "appId": "com.impirs.razvivashka",
  "productName": "Развивашка",
  "executableName": "playandlearn",
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "zip",
          "arch": "x64"
        }
      ],
      "artifactName": "playandlearn_win_${arch}.${ext}",
      "icon": "./icon.ico",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "playandlearn_mac_${arch}.${ext}",
      "category": "public.app-category.education",
      "icon": "./icon.icns"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src_ts/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src_ts/assets/icon.ico",
        "to": "icon.ico"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Impirs",
        "repo": "Razvivashka"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Impirs/Razvivashka.git"
  },
  "keywords": [
    "games",
    "for kids",
    "learning"
  ],
  "author": "Artem Mamitov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Impirs/Razvivashka/issues"
  },
  "homepage": "https://github.com/Impirs/Razvivashka#readme",
  "dependencies": {
    "axios": "^1.11.0",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.1",
    "sass": "^1.86.3",
    "scss": "^0.2.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.10.1",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^8.0.3"
  },
  "extraResources": [],
  "asar": true
}
